<div class="container">


  <h1><%= @question.title %></h1>

  <%= erb :'_errors' %>

  <form class="col s12" action="/questions/<%= @question.id %>/answers" method="post">
    <div class="row">
      <div class="col s6">
        <textarea name="content" placeholder="Your answer"></textarea>
      </div>
    </div>
    <input class="waves-effect waves-green btn-flat" type="submit" value="Answer">
  </form>

</div>
