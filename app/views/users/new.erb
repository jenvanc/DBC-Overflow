<div class="container">

  <%= erb :'_errors' %>

  <div class="row">
    <form class="col s12" action="/users" method="post">
      <div class="row">
        <div class="col s6">
          <label>Email</label>
          <input type="email" name="user[email]">
        </div>
      </div>
      <div class="row">
       <div class="col s6">
        <label>Username:</label>
        <input type="text" name="user[username]">
      </div>
    </div>
    <div class="row">
      <div class="col s6">
        <label>Password:</label>
        <input type="password" name="user[password]">
      </div>
    </div>

    <input class="waves-effect waves-green btn" type="submit" name="sumbit" value="Register">
    </form>
  </div>

</div>
