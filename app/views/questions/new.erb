<div class="container">

  <h2>New Question</h2>
  <%= erb :'_errors' %>
  <form class="col s12" action="/questions" method="post">
    <div class="row">
      <div class="col s6">
        <input type="text" name="question[title]" placeholder="title"><br><br>
      </div>
    </div>
    <div class="row">
     <div class="col s6">
       <textarea name="question[content]" placeholder="Ask your question"></textarea><br><br>
    </div>
    </div>
    <input class="waves-effect waves-green btn-flat" type="submit" value="Submit">
  </form>
</div>
