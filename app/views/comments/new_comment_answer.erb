<div class="container">

  <h1>Comment on: <%= @answer.content %></h1>

  <%= erb :'_errors' %>

  <form class="col s12" action="/questions/<%= @question.id %>/answers/<%= @answer.id %>/comments" method="post">
    <div class="row">
      <div class="col s6">
        <textarea rows="4" cols="50" name="content" placeholder="Your comment"></textarea>
      </div>
    </div>
    <input class="waves-effect waves-green btn-flat" type="submit" value="comment">
  </form>
</div>
